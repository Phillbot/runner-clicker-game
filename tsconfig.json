{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "rootDirs": [
      "./src",
      "./src/__generated__/styles"
    ],
    "types": [
      "reflect-metadata",
      "vite/client",
      "node",
      "telegram-web-app"
    ],
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@fonts/*": [
        "@fonts/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@localization/*": [
        "i18n/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "src/@types",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
